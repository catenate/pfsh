set -fu
set -o pipefail

. argenv

limit=${limit:-0}
seconds=1
sum=0
rv=1

while test $sum -le $limit -a $rv -ne 0; do
	"$@"
	rv=$?

	if test $sum -le $limit -a $rv -ne 0; then
		sleep $seconds

		if test $limit -ne 0; then
			sum=$(expr $sum + $seconds)
		fi

		seconds=$(expr $seconds * 2)
	fi
done

exit $rv

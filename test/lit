set -eu
self=$(basename $0)

interpreter=$1
shift
tag=$(echo $interpreter | field 1)

script=$1
shift

case $tag in
	/*)
		sed -n "s,^	${tag}> ,,p" $script >${tag}
		ls ${tag}
		;;
	perl)
		ext=pl
		sed -n "s,^	${tag}> ,,p" $script >${script}.${ext}
		$interpreter ${script}.${ext} "$@"
		;;
	*)
		ext=$tag
		sed -n "s,^	${tag}> ,,p" $script >${script}.${ext}
		$interpreter ${script}.${ext} "$@"
		;;
esac

